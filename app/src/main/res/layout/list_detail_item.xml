<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88E0DEDE"
                android:gravity="center">
    <RelativeLayout
        android:id="@+id/relative_author_container"
        android:layout_width="match_parent"
        android:background="#AAE0DEDE"
        android:padding="10dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"

        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_photo"
        android:gravity="center_vertical"
        android:textColor="#FF5de8ef"
        android:textSize="14sp"
        tools:text="zhang san"/>

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_author"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/iv_photo"
        android:gravity="center_vertical"
        android:textColor="#88AA00AA"
        android:textSize="14sp"
        tools:text="zhang san"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_author_container"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:gravity="center_vertical"
        android:letterSpacing="0.15"
        android:lineSpacingExtra="2dp"
        android:textColor="#FF333333"
        android:textSize="14sp"
        tools:text="KKKKKKKKKKKkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"/>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="#FF333333"
        android:textSize="14sp"
        tools:text="1989-03-18"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/tv_time"
        android:layout_marginTop="10dp"
        tools:background="#FFFF0000"
        android:background="#FFFFFFFF"/>
</RelativeLayout>