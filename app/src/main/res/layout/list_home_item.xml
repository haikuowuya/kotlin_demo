<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_list_item_background"
                android:gravity="center"
                android:paddingTop="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:padding="4dp"
        android:src="@drawable/shape_list_dot"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="36dp"

        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:gravity="center_vertical"
        android:textColor="#FF333333"
        android:textSize="14sp"
        tools:text="KKKKKKKKKKKkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tv_content"
        android:gravity="center_vertical"
        android:textColor="#FF488721"
        android:textSize="14sp"
        tools:text="zhang san"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_author"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:gravity="center_vertical"
        android:textColor="#FF333333"
        android:textSize="14sp"
        tools:text="1989-03-18"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_author"
        android:layout_marginTop="10dp"
        android:background="#88333333"/>
</RelativeLayout>